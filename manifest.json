{
    "name": "Sparx Bookwork Code Logger",
    "description": "Automatically writes down Sparx bookwork codes",
    "version": "0.0",
    "manifest_version": 3,
    "minimum_chrome_version": "109",
    "permissions": [
        "webRequest",
        "tabs",
        "scripting",
        "storage",
        "unlimitedStorage",
        "activeTab"
    ],
    "host_permissions": [
        "*://maths.sparx-learning.com/*"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [{
        "matches": ["https://maths.sparx-learning.com/*"],
        "js": ["content.js"],
        "run_at": "document_start"
    }],
    "web_accessible_resources": [{
        "resources": ["intercept_console_log.js", "intercept_post_response.js"],
        "matches": ["*://maths.sparx-learning.com/*"]
    }],
    "action": {
        "default_popup": "popup.html",
        "default_icon": "images/128_icon_inactive.png"
    }
}